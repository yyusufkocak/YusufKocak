@model Publisher
@{
    ViewData["Title"] = "Edit";
}
<h5>Edit Publisher</h5>
<hr>
<form asp-action="Edit">
    <label>ID:</label>
    <label asp-for="PublisherId">@Model.PublisherId</label>
    <input type="hidden" asp-for="PublisherId">
    <label>Publisher Name:</label>
    <input type="text" asp-for="PublisherName">
    <label>Publisher City:</label>
    <input type="text" asp-for="PublisherCity">
    <label>Publisher Mail:</label>
    <input type="text" asp-for="PublisherMail">
    <input type="submit" value="Save Changes">
</form>