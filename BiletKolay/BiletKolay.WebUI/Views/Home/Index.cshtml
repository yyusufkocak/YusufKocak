@model RouteTicket

@{
    ViewData["Title"] = "Home Page";
}

<header>
    @if (Model.Routes != null)
    {
        <div class="row">
            @foreach (var item in @Model.Routes)
            {

                
                    @await Html.PartialAsync("expeditions", item)

                
            }
        </div>
    }
    else
    {
        <div class="row">
            @await Html.PartialAsync("_exTravel")
        </div>
    }

</header>

<div>

    <div class="content">
        <div class="content-text">
            <h1>KONFORLU SEYEHAT</h1>
            <h2>Uygun Fiyat | Kaliteli Yolculuk</h2>
        </div>
        <div class="form-content">
            <form action="/home/index" class="contact-form">
                <label for="varis">Kalkış Noktası</label>
                <select name="startLocation" class="form-select form-select" id="from-place" asp-items="@ViewBag.Cities">
                    <option selected disabled>Kalkış Yeri Seçin</option>
                </select>
                <span id="pin_drop" class="material-symbols-outlined">
                    pin_drop
                </span>
                <label for="gidis">Varış Noktası</label>
                <select name="endLocation" class="form-select form-select" id="from-place" asp-items="@ViewBag.Cities">
                    <option selected disabled>Varış Yeri Seçin</option>
                </select>
                <span id="add_location_alt" class="material-symbols-outlined">
                    add_location_alt
                </span>
               
                <label for="date-start" style="margin-top: 8px;">Gidiş Tarihi</label>
                <input type="date" name="Date" value="" />
                <div id="rezervasyon">
                    <button type="submit" class="btn-rez">Sefer Ara</button>
                </div>
            </form>

        </div>

    </div>
   
</div>
<main>
    <!-- services -->
    <section id="services" class="icons bg-light">
        <div class="flex-items">
            <div>
                <i class="fas fa-concierge-bell fa-3x"></i>
                <div>
                    <h3>Hizmet</h3>
                    <p>
                        7/24 Size Yardımcı Olacak Hazır Bir Ekip.
                    </p>
                </div>
            </div>
            <div>
                <i class="fas fa-utensils fa-3x"></i>
                <div>
                    <h3>Yemek</h3>
                    <p>
                        Bütün Seferlerimizde İkram Bulunmaktadır.
                    </p>
                </div>
            </div>
            <div>
                <i class="fas fa-bus fa-3x"></i>
                <div>
                    <h3>Transfer Servisi</h3>
                    <p>
                        İndiğiniz Yerde Sizi İstediğiniz Bölgeye Götürecek Servislerimiz Mevcut.
                    </p>
                </div>
            </div>
            <div>
                <i class="fas fa-spa fa-3x"></i>
                <div>
                    <h3>Kalite</h3>
                    <p>
                        Son Model Araçlarımızda Geçireceğiniz Her Bir Dakika Size Benzersiz Bir Deneyim Sunacak.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- where -->
    <section id="turlar" class="tur flex-columns">
        <div class="row">
            <div class="column">
                <div class="column-1">
                    <img src="/img/tur.jpg" alt="">
                </div>
            </div>
            <div class="column">
                <div class="column-2 bg-secondary">
                    <h2>Tatil Turlarımız</h2>
                    <p>Gezi Ve Tatil Turlarınız İçin Paketlerimizi İnceleyebilirsiniz...</p>
                    <button class="btn btn-primary">İncele</button>
                </div>
            </div>
        </div>
    </section>

    <!-- gallery -->
    <section id="gallery" class="gallery flex-grid section-padding">
        <header class="section-header">
            <h2>Popüler Seferler</h2>
            <p>Kampanyalı Fiyatlarımızı Kaçırmayın !</p>
        </header>
        <div class="row">
            <div class="column">
                <img src="/img/1.jpg" alt="">
                <img src="/img/2.jpg" alt="">
            </div>
            <div class="column">
                <img src="/img/3.jpg" alt="">
                <img src="/img/4.jpg" alt="">

            </div>
            <div class="column">
                <img src="/img/5.jpg" alt="">
                <img src="/img/6.jpg" >
            </div>
        </div>
    </section>

    <!-- about -->
    <section class="where flex-columns flex-reverse">
        <div class="row">
            <div class="column">
                <div class="column-1">
                    <img src="/img/konum.jpg" alt="">
                </div>
            </div>
            <div class="column">
                <div class="column-2 bg-primary">
                    <h2>Yolcum Nerede?</h2>
                    <p>Bu Kısımdan İlgili Seyahat Bilgisine Ulaşabilirsiniz.</p>
                    <button class="btn btn-outline">Bilgi Al</button>
                </div>
            </div>
        </div>
    </section>

    <!-- ticket sell -->
    <section id="rooms" class="rooms section-padding">
        <header class="section-header">
            <h2>Bilet Satış Noktaları</h2>

        </header>
        <div class="flex-items">
            <div class="card">
                <img src="/img/ist.jpg" alt="">
                <div class="card-body bg-warning">
                    <h2>İstanbul</h2>
                </div>
            </div>
            <div class="card">
                <img src="/img/ank.jpg" alt="">
                <div class="card-body bg-warning">
                    <h2>Ankara</h2>
                </div>
            </div>
            <div class="card">
                <img src="/img/izmir.jpg" alt="">
                <div class="card-body bg-warning">
                    <h2>İzmir</h2>
                </div>
            </div>
        </div>
    </section>

    <!-- teams -->
    <section id="teams" class="teams section-padding bg-light">
        <header class="section-header">
            <h2>Kaliteli Deneyim</h2>
            <p>Mutlu Müşteriler</p>
        </header>

        <div class="flex-items">
            <div>
                <img src="/img/p1.jpeg" alt="">
            </div>        
            <div>         
                <img src="/img/p2.jpeg" alt="">
            </div>        
            <div>         
                <img src="/img/p3.jpeg" alt="">
            </div>
        </div>
    </section>

    <!-- contact -->
    <section id="contact" class="contact flex-columns">
        <div class="row">
            <div class="column">
                <div class="column-1">
                    <img src="/img/contact.jpeg" alt="">
                </div>
            </div>
            <div class="column">
                <div class="column-2 bg-light">
                    <h2>Bizimle İletişime Geçin</h2>
                    <form action="" class="contact-form">
                        <div class="form-control">
                            <label for="name">İsim</label>
                            <input type="text" id="name">
                        </div>
                        <div class="form-control">
                            <label for="name">Mail</label>
                            <input type="email" id="email">
                        </div>
                        <div class="form-control">
                            <label for="name">Telefon</label>
                            <input type="text" id="phone">
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
